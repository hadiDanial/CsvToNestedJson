<Window x:Class="CSVToJSON.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVToJSON"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="925" MinWidth="925">
    <Grid>
        <Button Name="OpenFileButton" Click="OpenFileButton_OnClick" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20">Open File</Button>

        <!-- Text Boxes -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0">
            <TextBox Name="CsvTextBox"  Width="900" Height="250" IsReadOnly="True" VerticalScrollBarVisibility="Auto" />
            <TextBox Name="JSONTextBox" Width="900" Height="250" IsReadOnly="True" VerticalScrollBarVisibility="Auto" />
        </StackPanel>    </Grid>
</Window>
